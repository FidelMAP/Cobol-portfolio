CEDA DEFINE FILE(LOANS) FILETYPE(VSAM)
CEDA DEFINE FILE(LOAN_TMP) FILETYPE(VSAM)

CEDA DEFINE TRANSACTION(LOAN_CRE) PROGRAM('LOAN_CREATION_CICS') COMMAREA(100)
CEDA DEFINE TRANSACTION(LOAN_UPD) PROGRAM('LOAN_UPDATE_CICS') COMMAREA(100)
CEDA DEFINE TRANSACTION(LOAN_QRY) PROGRAM('LOAN_QUERY_CICS') COMMAREA(100)
CEDA DEFINE TRANSACTION(LOAN_RPT) PROGRAM('LOAN_REPORT_CICS') COMMAREA(100)

CEDA AUTHORIZE USER(CICSUSER) FILE(LOANS) OP(READ,WRITE,REWRITE)
CEDA AUTHORIZE USER(CICSUSER) FILE(LOAN_TMP) OP(READ,WRITE,REWRITE)
CEDA AUTHORIZE USER(CICSUSER) TRANSACTION(LOAN_CRE)
CEDA AUTHORIZE USER(CICSUSER) TRANSACTION(LOAN_UPD)
CEDA AUTHORIZE USER(CICSUSER) TRANSACTION(LOAN_QRY)
CEDA AUTHORIZE USER(CICSUSER) TRANSACTION(LOAN_RPT)

LOGON CICSUSER

TRANSACTION LOAN_CRE
    /* COMMAREA: datos de creación de préstamo */

TRANSACTION LOAN_UPD
    /* COMMAREA: datos de actualización */

TRANSACTION LOAN_QRY
    /* COMMAREA: criterios de búsqueda */

TRANSACTION LOAN_RPT
    /* COMMAREA: parámetros de reporte */

LOGOFF CICSUSER
